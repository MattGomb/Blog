<%= render partial: "shared/user", locals: { user: @user } %>
<div class="user-bio"> 
  <h3>Bio</h3>
  <p><%= @user.bio %>
</div>
<div class="user-allposts">
  <% @user.posts.each do |post| %>
    <div class="user-post">
      <h3><%= post.title %></h3>
      <p><%= post.text %></p>
      <div class="user-postdata">
        <p>Comments: <%= post.comments_counter %></p>
        <p>Likes: <%= post.likes_counter %></p>
      </div>
    </div>
  <% end %>
</div>
