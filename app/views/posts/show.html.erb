<div>
  <div>
    <h2><%= @post.title %> by <%= @user.name %></h2>
    <p>Comments: <%= @post.comments_counter %></p>
    <p>Likes: <%= @post.likes_counter%></p>
    <p><%= @post.text %></p>
  </div>
  <div>
  <% @post.comments.each do |comment| %>
    <% user = User.find(comment.author_id) %>
      <div>
        <p>Username: <%= user.name %></p>
        <p><%= comment.text %></p>
      </div>
    <% end %> 
  </div>
</div>